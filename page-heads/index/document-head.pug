        link(rel='manifest' href='data:application/manifest+json,{"name":"'+pageTitle+'", "short_name": "sample", "description": "'+pageDescription+'", "start_url":"'+pageURL+'", "background_color": "rgba(255,255,255,1)", "theme_color": "rgba(255,255,255,1)", "icons": [ { "src": "/android-chrome-192x192.png", "sizes": "192x192", "type": "image/png" } ], "display": "standalone", "orientation": "portrait" }')

        link(rel='icon' href='favicon.ico')
        link(rel='apple-touch-icon' sizes='180x180' href='img/sample-icon.png')
        meta(name='description', content='Sample Description in the Sample Page Head')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        
        include styles-include.pug
        include scripts-include.pug
